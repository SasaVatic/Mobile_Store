@model MobileStore_CodeFirst.Models.Brand

@{
    ViewBag.Title = "Brands Details";
}

<div class="container py-4">
    <h2>Brand Details</h2>
    <hr />
    <div class="py-5">

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.BrandName)
            </dt>

            <dd class="mt-3">
                @Html.DisplayFor(model => model.BrandName)
            </dd>

        </dl>
    </div>
    <div class="row">
        <div class="p-3">
            @Html.ActionLink("Edit", "Edit", new { id = Model.BrandId }, new { @class = "btn btn-warning" })            
        </div>
        <div class="p-3">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
