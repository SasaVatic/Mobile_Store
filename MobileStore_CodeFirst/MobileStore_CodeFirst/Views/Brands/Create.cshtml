@model MobileStore_CodeFirst.Models.Brand

@{
    ViewBag.Title = "Brands Create";
}

<div class="container py-4">
    <h2>Create Brand</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row py-5">
                @Html.LabelFor(model => model.BrandName, htmlAttributes: new { @class = "control-label col-md-2 align-self-center" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="p-3">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
                <div class="col-md-10 p-3">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    }    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
