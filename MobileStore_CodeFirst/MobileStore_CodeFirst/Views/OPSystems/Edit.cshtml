@model MobileStore_CodeFirst.Models.OPSystem

@{
    ViewBag.Title = "Operating Systems Edit";
}

<div class="container py-4">
    <h2>Edit Operating System</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal pt-5">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.OPSystemId)

            <div class="form-group row">
                @Html.LabelFor(model => model.OpSystemName, htmlAttributes: new { @class = "control-label col-md-2 align-self-center" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OpSystemName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OpSystemName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2 align-self-center" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row pt-5">
                <div class="p-3">
                    <input type="submit" value="Save" class="btn btn-warning" />
                </div>
                <div class="col-md-10 p-3">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
