@model MobileStore_CodeFirst.Models.OPSystem

@{
    ViewBag.Title = "Operating Systems Delete";
}

<div class="container py-4">
    <h2>Delete Operating System</h2>
    <hr />
    <h3>Are you sure you want to delete @Model.OpSystemName Operating System?</h3>
    <div>
        <dl class="dl-horizontal row py-5">
            <div class="col">
                <dt>
                    @Html.DisplayNameFor(model => model.OpSystemName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.OpSystemName)
                </dd>
            </div>

            <div class="col-md-8">
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </div>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color row">
                <div class="p-3">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
                <div class="col-md-10 p-3">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        }
    </div>
</div>
